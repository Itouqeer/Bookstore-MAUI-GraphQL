<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Bookstore.Maui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:Bookstore.Maui.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="Bookstore">

    <TabBar>
        <Tab Title="Books" Icon="books.svg">
            <ShellContent ContentTemplate="{DataTemplate views:BooksPage}" />
        </Tab>
        <Tab Title="Authors" Icon="authors.svg">
            <ShellContent ContentTemplate="{DataTemplate views:AuthorsPage}" />
        </Tab>
    </TabBar>

</Shell>
